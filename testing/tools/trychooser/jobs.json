    "initial": {
        "configuration": [ "opt", "debug" ],
        "platforms": [ "linux", "osx", "windows" ],
        "tests": [],
        "talos": [],
        "tags": [],
        "paths":[],
        "extra_args":[]
    },

    "help": {
        "configuration": "build configuration (optimized vs debug)",
        "configuration/": {
            "opt": "optimized build",
            "debug": "unoptimized debug build"
            },
        "platforms": "platforms to build",
        "platforms/": {
            "linux": "Linux platforms",
            "b2g": "Boot 2 Gecko project platforms for Firefox OS",
            "b2g/": {
                "ics_armv7a_gecko": "B2G emulator",
                "panda": "B2G automation board",
                "unagi": "B2G device image",
                "otoro": "B2G device image"
            }
        },
        "tests/": {
            "reftest-ipc": "(linux opt only)",
            "reftest-no-accel": "(win7 only)",
            "crashtests/": {
                "crashtest-ipc": "(linux opt only)"
            }
        },
        "talos/": {
            "talos-ipc": "(try branch only)"
        }
    },

    "syntax": {
        "configuration": {
            "flag": "-b",
            "all-default": "do",
            "debug": "d",
            "opt": "o"
        },
        "platforms": {
            "flag": "-p",
            "all-default": "all",
            "linux": "*",
            "windows": "*",
            "osx": "*",
            "mobile": "*",
            "b2g": "*"
        },
        "tests": {
            "flag": "-u",
            "mochitests": {
                "all-default": "mochitests"
            },
            "reftests": {
                "all-default": "reftests"
            },
            "all-default": "all"
        },
        "talos": {
            "flag": "-t",
            "all-default": "all",
            "remote-talos": "*"
        }
    },

    "questions": {
        "configuration": {
            "prompts": [ "Both optimized and debug" ],
            "opt": "Just optimized",
            "debug": "Just debug"
        },
        "platforms": {
            "prompts": [ "Build on all default platforms", "Build on any platforms" ],
            "pattern": "Build on %s",
            "linux": {
                "linux64": "Build on x86-64 (64-bit) linux",
                "linuxqt": "Build on Qt linux"
            },
            "osx": {
                "macosx": "Build on Mac OSX 10.5 (i386, 32-bit, part of a universal binary)",
                "macosx64": "Build on Mac OSX 10.6 (x86-64, 64-bit, part of a universal binary)"
            }
        },
        "tests": {
            "prompts": [ "Run all regression tests on all chosen platforms", "Run any unit tests" ],
            "reftest-ipc": "Run IPC reftests",
            "reftest-no-accel": "Run non-accelerated reftests (win7 only)",
            "crashtests": {
                "crashtest-ipc": "Run IPC crashtests"
            },
            "android-specific": {
                "pattern": "Run %s (Android-only)"
            }
        },
        "talos": {
            "prompts": [ "Run all talos (performance) tests", "Run any talos tests" ],
            "pattern": "Run %s suite"
        }
    }
}
